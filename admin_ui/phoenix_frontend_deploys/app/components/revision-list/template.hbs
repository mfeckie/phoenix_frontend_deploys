<main>
  <h1>Revisions</h1>
  <section>
    <h2>Current Revision: {{active.id}}</h2>
  </section>
  <section>
    <ul>
      <li>
        <div>
          Revision ID
        </div>
        <div>
          Size
        </div>
        <div>
          Update Time
        </div>
        <div>
          Activation
        </div>
      </li>
      {{#each revisions as |revision|}}
        <li>
          <div>{{revision.id}}</div>
          <div>{{revision.size}}</div>
          <div>{{revision.mtime}}</div>
          <div>
            {{#if revision.active}}
              <button class="active" disabled=true>Active</button>
            {{else}}
              <button onclick={{action 'activateRevision' revision}}>Activate</button>
            {{/if}}
          </div>
        </li>
      {{/each}}
    </ul>
  </section>
</main>